@model IEnumerable<AiTimanMVC.Models.PrescriptionViewModel>
@{
    ViewData["Title"] = "Prescriptions  List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="container">

        <!-- Create Appointment Button -->
        <div class="create-appointment-box">
            <a href="@Url.Action("Prescription", "Prescription")" class="btn btn-lg btn-primary">Create Prescription</a>
        </div>

        <h3 class="form-title">@ViewData["Title"]</h3>

        <div class="appointments-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Patient Address</th>
                        <th>Presciption Medicine</th>
                        <th>Presciption Dosage</th>
                        <th>Provider Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var prescription in Model)
                        {
                            <tr>
                                <td>@prescription.PatientName</td>
                                <td>@prescription.PatientAddress</td>
                                <td>@prescription.PresMed</td>
                                <td>@prescription.PresDose</td>
                                <td>@prescription.ProviderName</td>
                                <td>
                                    <a href="@Url.Action("EditPrescription", "Prescription", new { id = prescription.Id })" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="@Url.Action("DeletePrescription", "Prescription", new { id = prescription.Id })" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No Prescription found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .create-appointment-box {
        background-color: lightskyblue;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4), 0 6px 20px rgba(173, 216, 230, 0.3);
        margin-bottom: 20px; /* Add space below the box */
        text-align: right; /* Center the content */
    }

    .appointments-table {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4), 0 6px 20px rgba(173, 216, 230, 0.3);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .table th {
            background-color: lightskyblue;
            color: white;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    .btn {
        margin-right: 5px;
    }
</style>
