@model IEnumerable<AiTimanMVC.Models.ReferralViewModel>
@{
    ViewData["Title"] = "Referrals  List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="container">

        <!-- Create Referral Button -->
        <div class="create-referral-box">
            <a href="@Url.Action("Referral", "Referral")" class="btn btn-lg btn-primary">Create Referral</a>
        </div>

        <h3 class="form-title">@ViewData["Title"]</h3>

        <div class="referrals-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Age</th>
                        <th>Address</th>
                        <th>Diagnosis</th>
                        <th>RefferTo </th>
                        <th>DoctorInCharge</th>
                        <th>DateCreated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var referral in Model)
                        {
                            <tr>
                                <td>@referral.PatientName</td>
                                <td>@referral.Age</td>
                                <td>@referral.Address</td>
                                <td>@referral.Diagnosis</td>
                                <td>@referral.RefferTo</td>
                                <td>@referral.DoctorInCharge</td>
                                <td>@referral.DateCreated</td>
                                <td>
                                    <a href="@Url.Action("EditReferral", "Referral", new { id = referral.Id })" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="@Url.Action("DeleteReferral", "Referral", new { id = referral.Id })" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No referrals found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .create-referral-box {
        background-color: lightskyblue;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4), 0 6px 20px rgba(173, 216, 230, 0.3);
        margin-bottom: 20px; /* Add space below the box */
        text-align: right; /* Center the content */
    }

    .referrals-table {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4), 0 6px 20px rgba(173, 216, 230, 0.3);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .table th {
            background-color: lightskyblue;
            color: white;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    .btn {
        margin-right: 5px;
    }
</style>
