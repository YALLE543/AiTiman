@model AiTimanMVC.Models.PrescriptionViewModel
@{
    ViewData["Title"] = "Doctor's Prescription";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-body">
    <div class="container">
 
        <div class="form-container">
            <h3 class="form-title">@ViewData["Title"]</h3>

            <form asp-action="Prescription" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <!-- Grouping Patient Name, Age, and Address in two lines -->
                <div class="row mb-3">
                    <!-- Patient Name -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="PatientName" class="form-control" required />
                            <label asp-for="PatientName">Patient Name</label>
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Patient Age -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="PatientAge" class="form-control" required />
                            <label asp-for="PatientAge">Patient Age</label>
                            <span asp-validation-for="PatientAge" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Patient Address -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="PatientAddress" class="form-control" required />
                            <label asp-for="PatientAddress">Patient Address</label>
                            <span asp-validation-for="PatientAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Other fields: Prescription Medicine, Dosage, Instructions, Provider ID -->
                <div class="form-floating mb-3">
                    <input asp-for="PresMed" class="form-control" required />
                    <label asp-for="PresMed">Prescription Medicine</label>
                    <span asp-validation-for="PresMed" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="PresDose" class="form-control" required />
                    <label asp-for="PresDose">Prescription Dosage</label>
                    <span asp-validation-for="PresDose" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="PresInst" class="form-control" rows="4" required></textarea>
                    <label asp-for="PresInst">Prescription Instructions</label>
                    <span asp-validation-for="PresInst" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                   
                    <input type="text" class="form-control" value="@ViewBag.CurrentUser?.UserName" readonly />
                    <label asp-for="ProviderName">Provider Name</label>
                    <span asp-validation-for="ProviderName" class="text-danger"></span>

                </div>

                <button type="submit" value="Prescription" class="btn btn-lg btn-primary w-100">Save Prescription</button>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4), 0 6px 20px rgba(173, 216, 230, 0.3);
    }

    .form-title {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    .row .form-floating {
        margin-bottom: 0; /* Remove margin-bottom from .form-floating within .row to align items */
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    button {
        width: 100%;
        padding: 15px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.3s;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>