@model AiTimanMVC.Models.PrescriptionViewModel
@{
    ViewData["Title"] = "Edit Prescription";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="edit-prescription-content">
    <div class="edit-prescription-container">
        <div class="edit-prescription-header">
            <h2 class="edit-prescription-title">Edit Prescription</h2>
        </div>

        <div class="edit-prescription-body">
            <form asp-action="EditPrescription" method="post">
                @* Include a hidden field for the ID *@
                <input asp-for="Id" type="hidden" />

                <!-- Patient Name -->
                <div class="form-group row mb-4">
                    <label asp-for="PatientName" class="col-sm-3 col-form-label prescription-label">Patient Name</label>
                    <div class="col-sm-9">
                        <input asp-for="PatientName" class="form-control" required />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Prescription Medicine -->
                <div class="form-group row mb-4">
                    <label asp-for="PresMed" class="col-sm-3 col-form-label prescription-label">Prescription Medicine</label>
                    <div class="col-sm-9">
                        <input asp-for="PresMed" class="form-control" required />
                        <span asp-validation-for="PresMed" class="text-danger"></span>
                    </div>
                </div>

                <!-- Prescription Dosage -->
                <div class="form-group row mb-4">
                    <label asp-for="PresDose" class="col-sm-3 col-form-label prescription-label">Prescription Dosage</label>
                    <div class="col-sm-9">
                        <input asp-for="PresDose" class="form-control" required />
                        <span asp-validation-for="PresDose" class="text-danger"></span>
                    </div>
                </div>

                <!-- Provider ID -->
                <div class="form-group row mb-4">
                    <label asp-for="ProviderName" class="col-sm-3 col-form-label prescription-label">Provider ID</label>
                    <div class="col-sm-9">
                        <input asp-for="ProviderName" class="form-control" required />
                        <span asp-validation-for="ProviderName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-lg btn-primary edit-prescription-btn">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Container for Editing Prescription */
    .edit-prescription-container {
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4), 0 6px 20px rgba(173, 216, 230, 0.3);
        max-width: 800px;
        margin: 50px auto;
    }

    /* Prescription Header Styles */
    .edit-prescription-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .edit-prescription-title {
        font-family: 'Roboto', sans-serif;
        font-size: 2rem;
        color: #333;
        letter-spacing: 1px;
        font-weight: 600;
    }

    /* Form Label Styles */
    .prescription-label {
        font-weight: 600;
        color: #007bff;
        font-size: 1.1rem;
    }

    /* Input and Textarea Styles */
    .form-control, .prescription-textarea {
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 1rem;
        padding: 10px;
        background: #fff;
        transition: border-color 0.3s ease;
    }

        .form-control:focus, .prescription-textarea:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    /* Button Styles */
    .edit-prescription-btn {
        width: 50%;
        padding: 15px;
        background-color: #007bff;
        border: none;
        color: white;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.2s;
    }

        .edit-prescription-btn:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    /* Additional Styles */
    .edit-prescription-body {
        padding: 15px;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>